<!DOCTYPE import-control PUBLIC
    "-//Puppy Crawl//DTD Import Control 1.1//EN"
    "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">
<import-control pkg="com.commercehub.gradle.plugin.avro">
    <allow pkg="com.commercehub.gradle.plugin.avro"/>

    <allow pkg="java.io"/>
    <allow pkg="java.lang"/>
    <allow pkg="java.net"/>
    <allow pkg="java.nio.charset"/>
    <allow pkg="java.util"/>
    <allow pkg="java.util.concurrent"/>

    <allow pkg="org.apache.avro"/>
    <allow pkg="org.apache.avro.compiler.idl"/>
    <allow pkg="org.apache.avro.compiler.specific"/>
    <allow pkg="org.apache.avro.generic"/>

    <allow pkg="org.gradle.api"/>
    <allow pkg="org.gradle.plugins.ide.idea"/>
    <allow pkg="org.gradle.util"/>
    <!-- Ideally using internal packages wouldn't be needed -->
    <allow pkg="org.gradle.api.internal"/>

    <allow pkg="com.commercehub.avro.tools.api"/>
    <allow pkg="com.commercehub.avro.tools.base"/>
</import-control>
